@model Factory.Models.Machine

<h3>Are you sure you want to delete this Machine?</h3>

@using (Html.BeginForm())
{
  <h5>Machine Details</h5>
  @await Html.PartialAsync("_Tables/_MachineDetails")

  @if (Model.Authorizations.Count() > 0)
  {
    <hr />
    <h5>This machine is currently maintained by these engineers:</h5>
    @await Html.PartialAsync("_Tables/_EngineersTable", @Model.Authorizations.Select(e => e.Engineer).ToList())
    <hr />
  }

  @await Html.PartialAsync("_Buttons/_Cancel")
  @await Html.PartialAsync("_Buttons/_Delete")
}
